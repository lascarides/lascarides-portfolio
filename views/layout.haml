!!!
%html{:lang => 'en'}
    %head
        %meta{:charset => "utf-8"}
        %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
        %title= "Michael Lascarides"
        %meta{:content => "Programmer, designer, researcher, author.", :name => "description"}
        %meta{:content => "Michael Lascarides", :name => "author"}
        %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"} 
        %link{:href => "/css/bootstrap-responsive.min.css", :rel => "stylesheet"} 
        %link{:href => "/css/michael.css", :rel => "stylesheet"} 

        /[if lt IE 9]
            %script{:src => "//html5shim.googlecode.com/svn/trunk/html5.js", :type => "text/javascript"} 

        %link{:rel => "shortcut icon", :href => "/assets/ico/favicon.ico"}

        %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js", :type => "text/javascript"} 
        %script{:src => "/js/bootstrap.min.js", :type => "text/javascript"} 
        %script{:src => "/js/michael.js", :type => "text/javascript"} 

    %body{:class => params[:page] ? "inside" : "home"}
        .container
            .row
                .span10.offset1
                    - if params[:page]
                        %h1
                            %a{:href => '/'}= "Michael Lascarides"
                            %span= "/" + params[:page]
                    - else
                        %h1= "Michael Lascarides"
            .row
                .span7.offset1
                    = yield
                .span3.side_nav
                    %ul.nav.nav-pills.nav-stacked
                        - ['work', 'art', 'projects', 'writing', 'teaching', 'speaking', 'contact'].each do |section|
                            %li{:class => params[:page] == section ? 'active' : '' }
                                %a{:href => "/" + section }= section
                        %li
                            %a{:href => "https://medium.com/@lascarides" } blog
                        


        #footer
            .container
                .row
                    .span5.offset1
                        <!-- AddThis Button BEGIN -->
                        .addthis_toolbox.addthis_default_style.addthis_32x32_style
                            %a.addthis_button_preferred_1
                            %a.addthis_button_preferred_2
                            %a.addthis_button_preferred_3
                            %a.addthis_button_preferred_4
                            %a.addthis_button_compact
                            %a.addthis_counter.addthis_bubble_style
                        %script{:src => "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-5059901865102622", :type => "text/javascript"} 

                    .span5.tinylinks
                        %a{:href => '/assets/pdf/michael-lascarides-cv.pdf'}= "My CV"
                        = '&middot;' 
                        %a{:href => '/colophon'}= "Colophon"


        %script{:src => "/js/ga.js", :type => "text/javascript"} 

